{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "*": ["*", "src/*"],
      "components": ["./components/*"],
      "layout": ["src/layout/*"],
      "static": ["src/static/*"]
    }
  },
  "exclude": ["node_modules", "data", "content"],
}

  